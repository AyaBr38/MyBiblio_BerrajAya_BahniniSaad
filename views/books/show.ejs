<h2 class="page-header"><%= book.title %></h2>
<div class="book-details">
  <div>
    <img class="book-cover" src="<%= book.coverImagePath %>">
    <div class="book-details-btn-grid">
      <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Modifier</a>
      <%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
      <a class="btn btn-primary book-details-author-button" href="/authors/<%= book.author.id %>">Voir l'auteur</a>
    </div>
  </div>
  <div class="book-details-grid">
    <div class="book-details-label">Auteur:</div>
    <div><%= book.author.name %></div>
    <div class="book-details-label">Date de publication:</div>
    <div><%= book.publishDate.toDateString() %></div>
    <div class="book-details-label">Nombre de Pages:</div>
    <div><%= book.pageCount %> page(s)</div>
    <div class="book-details-label">Statut:</div>
    <div>
    <% if(book.read === true) { %>
    <div>Livre fini</div>
    <% } else { %>
      <div>Livre non fini</div>
    <% } %>
    </div>
    <div class="book-details-label">Description:</div>
    <div><%= book.description %></div>   
  </div>
</div>
