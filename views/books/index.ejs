<h2 class="page-header">Rechercher Livre</h2>
<form action="/books" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label>Titre</label>
      <input type="text" name="title" value="<%= searchOptions.title %>">
    </div>
    <div class="form-item">
      <label>Statut</label>
      <select name="read">
        <option selected label="Livre fini" value="<%= searchOptions.read=true %>">
        <option label="Livre non fini" value="<%= searchOptions.read=false %>">
  </select>
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label>Publié(s) Apres</label>
      <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
    </div>
    <div class="form-item">
      <label>Publié(s) Avant</label>
      <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Rechercher</button>
  </div>
</form>
<%- include('../partials/bookGrid', {books:books , large: true}) %>